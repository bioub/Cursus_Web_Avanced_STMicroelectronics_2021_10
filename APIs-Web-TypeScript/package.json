{
  "scripts": {
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "serve": "live-server dist",
    "build:ts": "tsc",
    "build:html": "ncp src/index.html dist/index.html",
    "build:css": "sass src/app.scss dist/app.css",
    "build": "npm-run-all build:*",
    "lint:html": "htmlhint src/index.html",
    "lint:css": "stylelint \"src/**/*.css\""
  },
  "devDependencies": {
    "cypress": "^9.1.0",
    "htmlhint": "^1.0.0",
    "live-server": "^1.2.1",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "sass": "^1.44.0",
    "stylelint": "^14.1.0",
    "stylelint-config-standard": "^24.0.0",
    "typescript": "^4.4.4"
  }
}
